<h1>Welcome to Social !!!</h1>

<div class="root">
  <h3>Sign up</h3>
  <div class="login">
    <%= render partial: "partials/errors"%>
    <%= form_for @user do  |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
      <br>
      <%= f.label :email %><br>
      <%= f.email_field :email %>
      <br>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
      <br>
      <%= f.submit %>
    <%end%>
  </div>
  <p class="small-italic">Have an account already?
    <%=link_to "Log in", login_path %>
  </p>
</div>


