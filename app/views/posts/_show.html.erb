<section class="post">
  <div class="post-content">
    <%=post.content %>
  </div>
  <div class="post-info">
    <p class="post-data"> Likes: <%=post.likes.count%> Posted by: <%=post.sender.name%> on <%=post.created_at.to_datetime.in_time_zone("Central Time (US & Canada)").strftime("%A, %d %b %Y")%> </p>
  </div>
  <span class="like">
    <%= render partial: "partials/like_form", locals: {post: post}%>
  </span>
  <div class="edit-post">
    <%if post_sender?(post)%>
    <!-- <a class="edit button" href="/posts/<%=post.id%>/edit">Edit</a> -->
    <%= form_tag("/posts/#{post.id}/edit", :method => :get) do  %>
      <%= submit_tag "edit" %>
    <% end %>
    <%end%>
  </div>
  <%= form_tag("/posts/#{post.id}", :method => :delete) do  %>
    <%= submit_tag "delete" %>
  <% end %>
</section>
