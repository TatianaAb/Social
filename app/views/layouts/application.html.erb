<!DOCTYPE html>
<html>
  <head>
    <title>Social</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="nav-bar-container">
      <h1> Social </h1>
        <nav class='nav-bar'>
          <% if login? %>
            <div class="nav-links">
              <%=link_to("My Friends", user_friendships_path(current_user)) %>
              <%= link_to 'Logout', session_path(current_user),
              method: :delete %>
              <%= link_to 'Profile', user_path(current_user) %>
              <%= form_tag search_path, :method => "get", id: "search-form" do %>
              <p><%= text_field_tag :search, params[:search], placeholder: "Search users", id: "search" %></p>
            </div>
            <% end %>
          <% else %>
            <div class="nav-links">
              <%= link_to 'Login', login_path %>
              <%= link_to 'Sign Up', new_user_path %>
            </div>
          <% end %>

      </nav>
    </header>
    <%= yield %>
  </body>
</html>
